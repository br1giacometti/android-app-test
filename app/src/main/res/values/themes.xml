<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppsPractica1Grup1027" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pet_primary</item>
        <item name="colorPrimaryVariant">@color/pet_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pet_accent</item>
        <item name="colorSecondaryVariant">@color/pet_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pet_primary_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:backgroundTint">@color/pet_primary</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pet_text</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/pet_text</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/pet_primary</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pet_text_secondary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>